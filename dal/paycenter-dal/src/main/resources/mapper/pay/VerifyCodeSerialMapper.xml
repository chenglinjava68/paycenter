    <!--增加-->
    <insert id="insert" parameterType="com.qccr.paycenter.dal.domain.pay.VerifyCodeSerialDO" >
        insert into verify_code_serial (id, card_no, request_add_data, return_add_data, trace_no, invioce_no, 
            user_id, create_time, update_time, create_person, update_person,pay_channel)
        values (#{id}, #{cardNo}, #{requestAddData}, #{returnAddData}, #{traceNo}, #{invioceNo}, 
            #{userId}, now(), now(), #{createPerson}, #{updatePerson},#{payChannel})
    </insert>
    
    <!--更新-->
    <update id="update" parameterType="com.qccr.paycenter.dal.domain.pay.VerifyCodeSerialDO" >
        update verify_code_serial
        <set >
            id = #{id}
            
            <if test="cardNo != null" >
